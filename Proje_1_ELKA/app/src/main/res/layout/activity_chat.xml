<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity">




            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/profilPhoto"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_margin="16dp"
                android:src="@drawable/logo"
                app:riv_oval="true" />
            <TextView
                android:id="@+id/kisiEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="SElamlars"
                android:layout_marginLeft="65dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"

/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="45dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recGidenMesaj"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="45dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recGelenMesaj"
                android:layout_width="180dp"
                android:layout_height="300dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="45dp" />


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="410dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/editTextMesaj"
            android:layout_width="363dp"
            android:layout_height="wrap_content"

            android:inputType="textPersonName" />

        <Button
            android:id="@+id/mesajGonder"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_send_24"
            android:onClick="mesajGonderClick"
            />
    </LinearLayout>


</RelativeLayout>