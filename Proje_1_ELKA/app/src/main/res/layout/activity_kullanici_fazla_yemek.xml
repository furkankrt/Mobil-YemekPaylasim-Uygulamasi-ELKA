<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplanss"
    tools:context=".ProfilBilgisi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/profilPhoto"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="16dp"
            android:onClick="ClickLogo"
            android:src="@drawable/logo"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/textisim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:text="Profil"
            android:textSize="20sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:id="@+id/HSW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/detailedMovieStoryTV">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/detailedYemek1"
                    android:layout_width="105dp"
                    android:layout_height="150dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/detailedYemek1TV"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:background="#E1E1E1"
                    android:alpha="0.7"
                    android:layout_marginTop="130dp"/>

                <ImageButton
                    android:id="@+id/detailedYemek2"
                    android:layout_width="105dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/detailedYemek1"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/detailedYemek2TV"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:background="#E1E1E1"
                    android:layout_marginLeft="5dp"
                    android:alpha="0.7"
                    android:layout_toRightOf="@+id/detailedYemek1TV"
                    android:layout_marginTop="130dp"/>

                <ImageButton
                    android:id="@+id/detailedYemek3"
                    android:layout_width="105dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/detailedYemek2"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/detailedYemek3TV"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:background="#E1E1E1"
                    android:layout_marginLeft="5dp"
                    android:alpha="0.7"
                    android:layout_toRightOf="@+id/detailedYemek2TV"
                    android:layout_marginTop="130dp"/>


                <ImageButton
                    android:id="@+id/detailedYemek4"
                    android:layout_width="105dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/detailedYemek3"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/detailedYemek4TV"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:background="#E1E1E1"
                    android:layout_marginLeft="5dp"
                    android:alpha="0.7"
                    android:layout_toRightOf="@+id/detailedYemek3TV"
                    android:layout_marginTop="130dp"/>

                <ImageButton
                    android:id="@+id/detailedYemek5"
                    android:layout_width="105dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/detailedYemek4"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/detailedYemek5TV"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:background="#E1E1E1"
                    android:layout_marginLeft="5dp"
                    android:alpha="0.7"
                    android:layout_toRightOf="@+id/detailedYemek4TV"
                    android:layout_marginTop="130dp"/>

            </RelativeLayout>
        </HorizontalScrollView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">

        <include layout="@layout/main_nav_drawer" />
    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>