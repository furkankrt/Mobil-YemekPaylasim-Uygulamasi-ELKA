<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/yenikayitttt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/backkkkkk"
    tools:context=".yenikayit">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_kayitol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="136dp"
                android:layout_marginTop="300dp"
                android:layout_marginBottom="46dp"
                android:backgroundTint="@color/teal_700"
                android:text="Kayıt Ol" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/kayit_emailgirtut"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:hint="E-mail"
                android:textColorHint="#9D9D9D"

                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="1dp"

                app:hintTextColor="#797979"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <!-- boxStrokeWidth kutu focus almadığındaki çizgi -->

                <EditText
                    android:id="@+id/kayit_emailgir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="27dp"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/teal_700" />
            </com.google.android.material.textfield.TextInputLayout>

            //İSİMMMMM

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/kayit_isimgirtut"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="15dp"
                android:hint="İsim"
                android:textColorHint="#9D9D9D"

                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="1dp"

                app:hintTextColor="#797979"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <!-- boxStrokeWidth kutu focus almadığındaki çizgi -->

                <EditText
                    android:id="@+id/kayit_isimgir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="27dp"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/teal_700" />
            </com.google.android.material.textfield.TextInputLayout>


            //SOY İSİM

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/kayit_soyisimgirtut"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="180dp"
                android:layout_marginEnd="15dp"
                android:hint="Soyisim"
                android:textColorHint="#9D9D9D"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="1dp"
                app:hintTextColor="#797979"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <!-- boxStrokeWidth kutu focus almadığındaki çizgi -->

                <EditText
                    android:id="@+id/kayit_soyisimgir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="180dp"
                    android:layout_marginEnd="27dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/teal_700" />
            </com.google.android.material.textfield.TextInputLayout>


            //ŞİFRE

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/kayit_sifregirtut"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="260dp"
                android:layout_marginEnd="15dp"
                android:hint="Şifre"
                android:textColorHint="#9D9D9D"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="1dp"
                app:hintTextColor="#797979"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <!-- boxStrokeWidth kutu focus almadığındaki çizgi -->

                <EditText
                    android:id="@+id/kayit_sifregir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="260dp"
                    android:layout_marginEnd="27dp"

                    android:ems="10"
                    android:inputType="textPassword"
                    android:textColorHint="@color/teal_700" />
            </com.google.android.material.textfield.TextInputLayout>

            //ŞİFRE ONAYLA

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/kayit_sifreonaylagirtut"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="340dp"
                android:layout_marginEnd="15dp"
                android:hint="Şifre Onayla"
                android:textColorHint="#9D9D9D"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="1dp"
                app:hintTextColor="#797979"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <!-- boxStrokeWidth kutu focus almadığındaki çizgi -->

                <EditText
                    android:id="@+id/kayit_sifreonaylagir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="340dp"
                    android:layout_marginEnd="28dp"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textColorHint="@color/teal_700" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/kayit_telefongirtut"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="420dp"
                android:layout_marginEnd="15dp"
                android:hint="Telefon"
                android:textColorHint="#9D9D9D"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="1dp"
                app:hintTextColor="#797979"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <!-- boxStrokeWidth kutu focus almadığındaki çizgi -->

                <EditText
                    android:id="@+id/kayit_telefongir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="420dp"
                    android:layout_marginEnd="57dp"
                    android:digits="0123456789"
                    android:layout_marginBottom="246dp"
                    android:ems="10"
                    android:inputType="phone"
                    android:textColorHint="@color/teal_700" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/imageView_profilfotosec"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="510dp"
                android:background="@drawable/transparenticon"
                android:onClick="selectImage"
                android:scrollbarSize="2dp"
                app:srcCompat="@drawable/profilphotoooooo" />


        </RelativeLayout>

    </ScrollView>




</RelativeLayout>